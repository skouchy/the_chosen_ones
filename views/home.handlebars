<main class="container-fluid mx-auto mb-3">
  <section class="p-3 mb-3 bg-dark flex-row align-center">
    <h2 class="text-light col-12 col-lg-5">Our Crew</h2>
    <div class="col-12 col-lg-7 flex-row text-center justify-space-around align-center">
      {{!-- <a class="btn col-12 col-md-auto mx-2" href="/">Add To the registry</a> --}}
    </div>
  </section>

  <section class="my-2 flex-row justify-space-between">
    <div class="col-12 col-lg-3 bg-dark p-3">
      <h3 class="text-light">Who's got what?</h3>
      <form id="users-form">



        <label for="diet-input" class="form-label">Dietary Needs (pick all that apply)</label>
        <small>On macOS, use <kbd>command + click</kbd></small> <br />
        <small>On Windows, use <kdb>ctrl + click</kdb></small>
        <select multiple id="diet-input" class="form-input" name="diet">
          <option value="vegetarian">Vegetarian</option>
          <option value="vegan">Vegan</option>
          <option value="pescetarian">Pescetarian</option>
          <option value="nut-free">Nut Free</option>
          <option value="gluten-free">Gluten Free</option>
        </select>
        <label for="boat-input" class="form-label">Got boats?</label>
        <div class="flex-row justify-center">
          <div class="col-auto mb-2">
            <input type="radio" id="no-boat-input" name="boat" value="no-boat">
            <label for="no-boat-input">None</label>
          </div>
          <div class="col-auto mb-2">
            <input type="radio" id="raft-input" name="boat" value="raft">
            <label for="raft-input">Raft</label>
          </div>
          <div class="col-auto mb-2">
            <input type="radio" id="kayak-input" name="boat" value="kayak">
            <label for="kayak-input">Kayak</label>
          </div>
        </div>
        <div class="col-12 col-lg-9 bg-dark p-3">
          <label for="row-input" class="form-label">on the oars?</label>
          <div class="flex-row justify-center">
            <div class="col-auto mb-2">
              <div class="col-auto mb-2">
                <input type="radio" id="row-input" name="can-row" value="row">
                <label for="row-input">Select to filter boat captains</label>
              </div>
            </div>
          </div>
            <button class="btn">Filter Crew</button>
      </form>

      <div class="flex-row justify-space-between" id="display-area">{{#each user}}{{/each}}</div>

    </div>
  </section>


</main>

<script src="/assets/js/home.js"></script>